{
    "properties": {
      "displayName": "TEMPLATE - Only allow creation of approved general resources - APTIV",
      "policyType": "Custom",
      "mode": "All",
      "parameters": {
        "effect": {
          "type": "String",
          "metadata": {
            "displayName": "effect",
            "description": "null"
          },
          "allowedValues": [
            "Audit",
            "Deny",
            "Disabled"
          ],
          "defaultValue": "Deny"
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "not": {
                "field": "type",
                "like": "Microsoft.Network/applicationGateway*"
              }
            },
            {
              "not": {
                "field": "type",
                "like": "Microsoft.Network/loadBalancers*"
              }
            },
            {
              "not": {
                "field": "type",
                "like": "Microsoft.Network/virtualNetworks*"
              }
            },
            {
              "not": {
                "field": "type",
                "like": "Microsoft.Network/networkWatchers*"
              }
            },
            {
              "not": {
                "field": "type",
                "like": "Microsoft.Network/networkSecurityGroups*"
              }
            },
            {
              "not": {
                "field": "type",
                "like": "Microsoft.Network/privateEndpoint*"
              }
            },
            {
              "not": {
                "field": "type",
                "like": "Microsoft.Network/routeTables*"
              }
            },
            {
              "not": {
